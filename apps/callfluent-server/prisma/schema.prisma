datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Plan {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Subscription {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model AiPhoneAgent {
  active              Boolean?
  conversationHistory String?
  conversations       Conversation[]
  createdAt           DateTime       @default(now())
  id                  String         @id @default(cuid())
  language            String?
  name                String?
  responseScript      String?
  speechSettings      String?
  updatedAt           DateTime       @updatedAt
}

model Billing {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model User {
  conversations Conversation[]
  createdAt     DateTime       @default(now())
  email         String?        @unique
  firstName     String?
  id            String         @id @default(cuid())
  lastName      String?
  password      String
  roles         Json
  updatedAt     DateTime       @updatedAt
  username      String         @unique
}

model Conversation {
  aiPhoneAgent   AiPhoneAgent? @relation(fields: [aiPhoneAgentId], references: [id])
  aiPhoneAgentId String?
  createdAt      DateTime      @default(now())
  endTime        DateTime?
  id             String        @id @default(cuid())
  startTime      DateTime?
  transcript     String?
  updatedAt      DateTime      @updatedAt
  user           User?         @relation(fields: [userId], references: [id])
  userId         String?
}
